<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/toolbar_primary</item>
        <item name="android:colorPrimaryDark">@color/toolbar_primaryDark</item>
        <item name="android:textColorPrimary">@color/toolbar_text_primary</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FitWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FitHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="activity" parent="MatchParent">

    </style>

    <style name="toolbar" parent="FitWidth">
        <item name="android:background">@color/toolbar_primary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="shadow" parent="FitWidth">
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/gradient_shadow</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

</resources>